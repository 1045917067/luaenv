#!/usr/bin/env bash
set -e
export -n CDPATH

if [ "$1" = "--debug" ]; then
  export LUAENV_DEBUG=1
  shift
fi

if [ -n "$LUAENV_DEBUG" ]; then
  export PS4='+ [${BASH_SOURCE##*/}:${LINENO}] '
  set -x
fi

READLINK=$(type -p greadlink readlink | head -1)
if [ -z "$READLINK" ]; then
  echo "luaenv: cannot find readlink - are you missing GNU coreutils?" >&2
  exit 1
fi

resolve_link() {
  $READLINK "$1"
}

abs_dirname() {
  local cwd="$(pwd)"
  local path="$1"

  while [ -n "$path" ]; do
    cd "${path%/*}"
    local name="${path##*/}"
    path="$(resolve_link "$name" || true)"
  done

  pwd
  cd "$cwd"
}

if [ -z "${LUAENV_ROOT}" ]; then
  LUAENV_ROOT="${HOME}/.luaenv"
else
  LUAENV_ROOT="${LUAENV_ROOT%/}"
fi
export LUAENV_ROOT

if [ -z "${LUAENV_DIR}" ]; then
  LUAENV_DIR="$(pwd)"
else
  cd "$LUAENV_DIR" 2>/dev/null || {
    echo "luaenv: cannot change working directory to \`$LUAENV_DIR'"
    exit 1
  } >&2
  LUAENV_DIR="$(pwd)"
  cd "$OLDPWD"
fi
export LUAENV_DIR


shopt -s nullglob

bin_path="$(abs_dirname "$0")"
for plugin_bin in "${LUAENV_ROOT}/plugins/"*/bin; do
  bin_path="${bin_path}:${plugin_bin}"
done
export PATH="${bin_path}:${PATH}"

hook_path="${LUAENV_HOOK_PATH}:${LUAENV_ROOT}/luaenv.d:/usr/local/etc/luaenv.d:/etc/luaenv.d:/usr/lib/luaenv/hooks"
for plugin_hook in "${LUAENV_ROOT}/plugins/"*/etc/luaenv.d; do
  hook_path="${hook_path}:${plugin_hook}"
done
export LUAENV_HOOK_PATH="$hook_path"

shopt -u nullglob


command="$1"
case "$command" in
"" | "-h" | "--help" )
  echo -e "$(luaenv---version)\n$(luaenv-help)" >&2
  ;;
"-v" )
  exec luaenv---version
  ;;
* )
  command_path="$(command -v "luaenv-$command" || true)"
  if [ -z "$command_path" ]; then
    echo "luaenv: no such command \`$command'" >&2
    exit 1
  fi

  shift 1
  exec "$command_path" "$@"
  ;;
esac
